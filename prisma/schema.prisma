datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x", "windows"]
}

model Course {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  slug          String  @unique
  title         String?
  description   String
  image         String

  @@map("courses")
}

model Video {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  slug          String  @unique
  title         String?
  description   String
  image         String
  video         String
  order         Int
  course        String @db.ObjectId

  @@map("videos")
}

model User {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String @unique
  password      String
  provider      String[]

  @@map("users")
}

model UserCourse {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  user          String @db.ObjectId
  course        String @db.ObjectId
  porcent       Float

  @@map("user_courses")
}

model Certificate {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  user          String @db.ObjectId
  course        String @db.ObjectId

  @@map("certificate")
}